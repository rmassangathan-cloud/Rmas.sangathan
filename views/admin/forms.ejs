<section class="admin-forms">
  <div class="container" style="max-width:1000px;margin:30px auto;">
    <h2>Forms</h2>
    <form method="GET" action="/admin/forms" style="margin-bottom:12px;">
      <label>Status:</label>
      <select name="status">
        <option value="">All</option>
        <option value="pending" <%= (typeof qstatus !== 'undefined' && qstatus==='pending') ? 'selected' : '' %>>Pending</option>
        <option value="accepted" <%= (typeof qstatus !== 'undefined' && qstatus==='accepted') ? 'selected' : '' %>>Accepted</option>
        <option value="rejected" <%= (typeof qstatus !== 'undefined' && qstatus==='rejected') ? 'selected' : '' %>>Rejected</option>
      </select>
      <button class="btn">Filter</button>
    </form>

    <table style="width:100%;border-collapse:collapse;">
      <thead>
        <tr style="background:#f5f5f5;"><th style="padding:8px;border:1px solid #ddd">Name</th><th style="padding:8px;border:1px solid #ddd">Mobile</th><th style="padding:8px;border:1px solid #ddd">District</th><th style="padding:8px;border:1px solid #ddd">Status</th><th style="padding:8px;border:1px solid #ddd">Assigned</th><th style="padding:8px;border:1px solid #ddd">Actions</th></tr>
      </thead>
      <tbody>
        <% forms.forEach(f => { %>
          <tr>
            <td style="padding:8px;border:1px solid #ddd"><%= f.fullName %></td>
            <td style="padding:8px;border:1px solid #ddd"><%= f.mobile %></td>
            <td style="padding:8px;border:1px solid #ddd"><%= f.assignedDistrict || f.district || '-' %></td>
            <td style="padding:8px;border:1px solid #ddd"><%= f.status %></td>
            <td style="padding:8px;border:1px solid #ddd"><%= f.assignedTo ? (f.assignedTo.name || f.assignedTo.email) : '-' %></td>
            <td style="padding:8px;border:1px solid #ddd"><a href="/admin/forms/<%= f._id %>">View / Assign</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>