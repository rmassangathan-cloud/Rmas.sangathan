                <% teamData.district[teamType].forEach(member => { %>
                  <div class="member-item">
                    <img src="<%= member.photo %>" alt="<%= member.name %>" class="member-photo">
                    <div class="member-info">
                      <div class="member-name"><%= member.name %></div>
                      <div class="member-role"><%= member.role %></div>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <p style="color:#888;font-style:italic;">कोई सदस्य नहीं</p>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Block Level -->
    <div class="level-section">
      <h2 style="border-bottom:2px solid #dc3545;padding-bottom:10px;margin-bottom:30px;">ब्लॉक स्तर (Block Level)</h2>
      <div class="team-grid">
        <% ['core', 'mahila', 'yuva', 'alpsankhyak', 'scst'].forEach(teamType => { %>
          <div class="team-card">
            <h3><%= teamNames[teamType] %></h3>
