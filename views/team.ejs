// teamData and teamNames are passed from the route

<section class="team-section">
  <div class="container">
    <h1 style="text-align:center;margin-bottom:40px;">हमारी टीम</h1>

    <!-- State Level -->
    <div class="level-section">
      <h2 style="border-bottom:2px solid #007bff;padding-bottom:10px;margin-bottom:30px;">राज्य स्तर (State Level)</h2>
      <div class="team-grid">
        <% ['core', 'mahila', 'yuva', 'alpsankhyak', 'scst'].forEach(teamType => { %>
          <div class="team-card">
            <h3><%= teamNames[teamType] %></h3>
            <% if(teamData.state[teamType] && teamData.state[teamType].length > 0) { %>
              <div class="members-list">
                <% teamData.state[teamType].forEach(member => { %>
                  <div class="member-item">
                    <img src="<%= member.photo %>" alt="<%= member.name %>" class="member-photo">
                    <div class="member-info">
                      <div class="member-name"><%= member.name %></div>
                      <div class="member-role"><%= member.role %></div>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <p style="color:#888;font-style:italic;">कोई सदस्य नहीं</p>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Division Level -->
    <div class="level-section">
      <h2 style="border-bottom:2px solid #28a745;padding-bottom:10px;margin-bottom:30px;">प्रभाग स्तर (Division Level)</h2>
