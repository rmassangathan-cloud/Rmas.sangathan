<div class="container">
  <h2>Enter OTP</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <p>An OTP has been sent to <strong><%= email %></strong>. Please enter it below.</p>

  <form method="POST" action="/documents/verify-otp">
    <input type="hidden" name="email" value="<%= email %>" />
    <div class="form-group">
      <label for="otp">OTP</label>
      <input id="otp" name="otp" required class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Verify OTP</button>
  </form>
</div>
