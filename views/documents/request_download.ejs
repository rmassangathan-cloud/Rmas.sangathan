<div class="container">
  <h2>ID Card / Joining Letter Download</h2>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="POST" action="/documents/request-download">
    <div class="form-group">
      <label for="name">Full Name (optional)</label>
      <input id="name" name="name" class="form-control" value="" />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input id="email" name="email" required class="form-control" value="<%= email %>" />
    </div>

    <% if (process.env.RECAPTCHA_SITE_KEY) { %>
      <!-- reCAPTCHA widget (optional) -->
      <div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div>
    <% } %>

    <button class="btn btn-primary" type="submit">Send OTP</button>
  </form>
</div>
